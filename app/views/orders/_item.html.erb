<article class="product">
  <header>
    <%= link_to product do %>
      <%= image_tag product.image.thumb, alt: product.name %>
      <h4><%= product.name %>; Quantity: <%= quantity%> </h4>
    <% end %>
  </header>
  <p class="description">
    <%= product.description %>
  </p>
  <footer class="actions">
  
  </footer>

  <aside class="price">
    <%= humanized_money_with_symbol product.price * quantity %>
  </aside>
  <% if product.quantity == 0 %>
    <aside class="sold-out">
    SOLD OUT! 
    </aside>
  <% end %>
</article>
<br>
