<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>


    </div>
    <div class="row">
      <h3>Reviews</h3>
        <% if current_user %>
          <%= form_for @review, url: product_reviews_path(@product)  do |form| %>

          <% if form.object.errors.any? %>
            <div class="alert alert-danger">
              <strong>The following errors prevented saving:</strong>
              <ul>
                <% form.object.errors.full_messages.each do |error| %>
                  <li><%= error %></li>
                <% end %>
              </ul>
            </div>
            <% end %>

            <%= form.hidden_field :product_id, value: @product.id %>
            <div class="form-group">
              <%= form.label :rating %>
              <%= form.select :rating, options_for_select(1..5), class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, class: 'form-control' %>
            </div>


            <%= form.submit 'Create Product', class: 'btn btn-primary' %>
          <% end %>
        <% end %>

        <% @product.reviews.order(created_at: :desc).each do |review|%>
          <div>
          <dl>
          <dt>Reviewer Name</dt>
          <dd><%= review.user.first_name + ' ' + review.user.last_name %></dd>
          <dt>Description</dt>
          <dd><%= review.description %></dd>
          <dt>Rating</dt>
          <dd><%= review.rating %></dd>
        </dl>
          </div>
        <% end %>
    <div>


  </article>

</section>
